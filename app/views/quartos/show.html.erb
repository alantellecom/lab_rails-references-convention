<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<h2> Numero do quarto: <%=@quarto.numero %> </h2>

<table>
  <thead>
    <tr>
      <th>Nome </th>
      <th>Pontos </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.usuario.nome %></td>
        <td><%= review.pontos %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "voltar", root_path %>


