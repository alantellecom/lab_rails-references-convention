<p id="notice"><%= notice %></p>

<section class="review">

    <h1>Reviews</h1>

    <h2> Numero do quarto: <%=@quarto.numero %> </h2>

    Pontuação Média: 
    <% @media_estrelas.times do%>
      <span class= "filled_star"></span>
    <%end%>
    
    <% (5 - @media_estrelas).times do%>
      <i class= "empty_star fa fa-star"></i>
    <%end%>

    <table>
      <thead>
        <tr>
          <th>Nome </th>
          <th>Pontos </th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.usuario.nome %></td>
            <td><%= review.pontos %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to "voltar", root_path %>

</section>
