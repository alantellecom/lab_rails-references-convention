<p id="notice"><%= notice %></p>

<h1>Quartos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Apelido </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quartos.each do |quarto| %>
      <tr>
        <td><%= quarto.nome %></td>
        <td><%= quarto.usuario.apelido %></td>
        <td><%= link_to 'Show', quarto %></td>
        <td><%= link_to 'Edit', edit_quarto_path(quarto) %></td>
        <td><%= link_to 'Destroy', quarto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

